<Window x:Class="Radiobuttons.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Radiobuttons"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="5">
        <Label Content="--------Radio Button--------" Margin="4,10"/>

        <RadioButton Name="rb1">Option 1</RadioButton>
        <RadioButton Name="rb2" IsChecked="True">Option 2</RadioButton>

        <StackPanel>
            <RadioButton Name="rb3">Option 3</RadioButton>
            <RadioButton Name="rb4">Option 4</RadioButton>
            <RadioButton x:Name="rb5" Content="Option 5"/>
        </StackPanel>
    </StackPanel>
</Window>
